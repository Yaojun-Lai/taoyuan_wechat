.container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  height: 100vh;
  padding: 20px;
  box-sizing: border-box;
  /* background-color: #f5f5f5; */
}
.background-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.btn-container {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
}

.btn {
  width: 60%;
  color: white;
  padding: 15px;
  border-radius: 10px;
  text-align: center;
  font-size: 16px;
}

.btn-cal {
  background-color: rgba(76, 175, 80, 0.5); /* #4CAF50 at 50% opacity */
}

.btn-manual {
  background-color: rgb(172, 216, 240); /* #2196F3 at 50% opacity */
}

.btn-prefer {
  background-color: rgba(218,117,53, 0.6); /* #FF9800 at 50% opacity */
}


.btn-clock {
  background-color: RGBA(128, 128, 128, 0.5);
}
