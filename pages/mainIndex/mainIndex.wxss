.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%; 
  height: 100%;
  z-index: 1000; /* Add this line */
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
  max-height: 90vh; /* Maximum height is 90% of the viewport height */
  overflow-y: auto; /* Enable vertical scrolling */
  width: 90%; /* Set the width to 80% of the viewport width */
  max-width: 500px;
}
.scrollable-content {
  overflow-y: auto;
  max-height: 70vh; /* Adjust this value as needed */
}
.modal-container {
  background-color: #fff;
  padding: 10px;
  border-radius: 10px;
  width: 100%; 
  max-width: 500px;
  display: flex;
  flex-direction: column;
}
.modal-header {
  display: flex;
  justify-content: center;
  padding: 10px;
}

.close-btn {
  color: white;
  border-radius: 5px;
  font-size: 16px;
  cursor: pointer;
  background-color: #ec634b; 
}
.item{
  padding: 5px;
  border-bottom: 1px solid #ddd;
  
}
.item-title {
  text-align: center;
  font-size: 22px; /* Adjust as needed */
  font-weight: bold; /* This will make the text bold */
  /* border-top: 1px solid #ddd; */
  margin-top:8px;
}

.item-detail {
  font-size: 18px; /* Adjust as needed */
  margin-bottom: 10px; /* This will add some space between each list item */
}

.dropdown {
  position: fixed;
  top: 32%;
  left: 25%;
  right: 25%;
  /* Other styles as needed */
  background-color:  rgba(218,117,53, 0.6);
  color: white;
  padding: 15px;
  border-radius: 10px;
  text-align: center;
  font-size: 16px;
}

.dropdown-menu {
  padding: 20px;
  display: none;
  position: absolute;
  left: 50%; /* Position the left edge of the menu in the center of the dropdown */
  transform: translateX(-50%);
  min-width: 200px; /* Change this value as needed */
  max-height: 190px; /* Or any other value */
  overflow-y: auto;
  
}

.dropdown-item {
  color: black;
  border-radius: 1px;
  padding: 15px;
  min-width: max-content; /* This will make the width fit the content */
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(252, 249, 249);
  border-bottom: 1px solid rgb(163, 162, 162);
  
}




.dropdown-menu.open {
  display: block;
}
