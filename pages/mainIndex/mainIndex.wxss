.dropdown {
  position: fixed;
  top: 32%;
  left: 25%;
  right: 25%;
  /* Other styles as needed */
  background-color:  rgba(218,117,53, 0.6);
  color: white;
  padding: 15px;
  border-radius: 10px;
  text-align: center;
  font-size: 16px;
}

.dropdown-menu {
  padding: 20px;
  display: none;
  position: absolute;
  left: 50%; /* Position the left edge of the menu in the center of the dropdown */
  transform: translateX(-50%);
  min-width: 200px; /* Change this value as needed */
  max-height: 190px; /* Or any other value */
  overflow-y: auto;
  
}

.dropdown-item {
  color: black;
  border-radius: 1px;
  padding: 15px;
  min-width: max-content; /* This will make the width fit the content */
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(252, 249, 249);
  border-bottom: 1px solid rgb(163, 162, 162);
  
}




.dropdown-menu.open {
  display: block;
}

