.navbar {
  border: 1px solid rgb(235, 234, 234);
  background-color: rgb(255, 255, 255,0.8);
  color: black;  /* White text */
  display: flex;  /* Flexbox for layout */
  justify-content: space-between;  /* Separate the items */
  align-items: center;  /* Center items vertically */
  /* box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);  Slight shadow for depth */
  position: fixed;  /* Fixed position */
  bottom: 0;  /* Align to bottom of page */
  left: 0;  /* Align to left of page */
  width: 100%;  /* Full width */
  z-index: 1000;  /* Stack above other elements */
  padding: 15px 0px;
  border-radius: 10px;
  margin-bottom: 5px;
}

.nav-item {
  width: 50%;  /* Half of the navbar width */
  text-align: center;  /* Center text within the nav item */
  padding: 0.5em 0;  /* Vertical padding */
  cursor: pointer;  /* Indicate clickability */
  /* background-color: rgba(0, 0, 0, 0.1); */
  border-radius: 12px;  /* Rounded corners for aesthetics */
}

.nav-item:hover {
  background-color: rgb(143, 142, 142);  /* Slightly lighter background on hover */
}




