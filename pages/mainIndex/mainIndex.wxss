.container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  height: 100vh;
  padding: 20px;
  box-sizing: border-box;
  /* background-color: #f5f5f5; */
}
.background-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.btn-container {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
}

.btn {
  width: 60%;
  color: white;
  padding: 15px;
  border-radius: 10px;
  text-align: center;
  font-size: 16px;
}

.btn-cal {
  background-color: rgba(76, 175, 80, 0.5); /* #4CAF50 at 50% opacity */
}

.btn-flower {
  background-color: rgba(243, 108, 203, 0.5); /* #4CAF50 at 50% opacity */
}

.btn-manual {
  background-color: rgb(172, 216, 240); /* #2196F3 at 50% opacity */
}

.btn-prefer {
  background-color: rgba(218,117,53, 0.6); /* #FF9800 at 50% opacity */
}


.btn-build {
  background-color: rgba(11, 152, 170, 0.26); /* #FF9800 at 50% opacity */
}

.btn-clock {
  background-color: RGBA(128, 128, 128, 0.5);
}

.btn-fish{
  background-color: rgba(69, 20, 247, 0.4); /* #FF9800 at 50% opacity */
}




.contact-button-container {
  position: fixed;
  bottom: 15px;
  right: 5px;
}

.btn-contact {
  width: 10%;
  color: white;
  background-color: rgb(224, 97, 97,0.65);
  padding: 5px 5px; 
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  /* box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.25); */
  border: none;
  outline: none;
  cursor: pointer;
}
