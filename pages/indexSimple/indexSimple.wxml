
<view class="container">
  <view class="results-section">
    <text>总价格: {{totalPrice}}</text>
    <text>总经验: {{totalExp}}</text>
    <text>倍数: {{multiplier}}</text>
  </view>
  <view class="input-section">
    <view class="input-row">
      <label for="price">价格:</label>
      <input id="price" bindinput="updateValue" data-type="price" placeholder="0" />
    </view>
    
    <view class="input-row">
      <label for="priceAdd">价格加成:</label>
      <input id="priceAdd" bindinput="updateValue" data-type="priceAdd" placeholder="0" />
    </view>
    
    <view class="input-row">
      <label for="exp">经验:</label>
      <input id="exp" bindinput="updateValue" data-type="exp" placeholder="0" />
    </view>
    
    <view class="input-row">
      <label for="expAdd">经验加成:</label>
      <input id="expAdd" bindinput="updateValue" data-type="expAdd" placeholder="0" />
    </view>
  </view>
  
  
</view>
