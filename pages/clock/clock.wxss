.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.picker {
  width: 100%;
  height: 300px;
}
.countdown {
  position: absolute;
  font-size: 2em;
  margin-top: -150px; /* half of the picker height */
}
.hidden {
  display: none;
}
.button-container {
  display: flex;
  justify-content: space-between;
  width: 100%;
  position: absolute;
  bottom: 20px; /* adjust as needed */
}
.start-button, .cancel-button {
  width: 60px;
  height: 60px;
  line-height: 60px;
  border-radius: 50%;
  background-color: #4285f4; /* adjust as needed */
  color: white;
  text-align: center;
  font-size: 14px; /* adjust as needed */
  padding: 10px; /* adjust as needed */
}
.cancel-button {
  float: left;
}
.start-button {
  float: right;
}
