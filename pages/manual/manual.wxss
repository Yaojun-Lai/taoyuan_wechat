.food-list {
  width: 100%;
  height: 100%;
}

.food-item {
  display: flex;
  padding: 10px;
  border-bottom: 1px solid #ccc;
}

.food-avatar {
  width: 60px;
  height: 60px;
}

.food-info {
  flex-grow: 1;
  margin-left: 10px;
}

.food-name, .food-desc1, .food-desc2 {
  display: block;
  margin-bottom: 5px;
}

.food-name {
  font-weight: bold;
}

.food-desc1, .food-desc2 {
  color: #666;
}
