  white-space: nowrap; /* Keeps text on a single line */
  overflow: hidden; /* Hide text that overflows */
  text-overflow: ellipsis; /* Add ellipsis (...) when text overflows */
}


.food-item .controls .plus,
.food-item .controls .minus {
  color: pink;
}

.info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.controls-row {
  display: flex;
  align-items: center;
}

.controls-row text {
  margin: 0 10px;  /* adjust this to increase/decrease the space between the controls */
}



.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100px;
  padding: 0 20px;
  background-color: #f0f0f0;
  box-shadow: 0 -2px 6px rgba(0, 0, 0, 0.1);
}

.total-price {
  font-size: 24px;
}

.total-price2 {
  font-size: 22px;
  display: flex;
  align-items: center;
}


.total-price2-text-margin {
  margin-left: 25px;  /* adjust this to increase/decrease the space */
}


.total-btn {
  background-color: #ff6347;
  color: #fff;
  font-size: 24px;
  border: none;
  border-radius: 5px;
  padding: 10px 10px;
  cursor: pointer;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 1000; /* Add this line */
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
  max-height: 90vh; /* Maximum height is 90% of the viewport height */
  overflow-y: auto; /* Enable vertical scrolling */
  width: 85%; /* Set the width to 80% of the viewport width */
  max-width: 500px;
}


.cart-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10px;
  padding: 10px;
  border-bottom: 1px solid #ddd; /* Add a bottom border to each item */
}

.cart-item .avatar {
  width: 50px;
  height: 50px;
  margin-right: 10px;
}

.cart-item .info {
  flex-grow: 1;
}

.cart-item .controls {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 20px;
}

.cart-item .controls .minus,
.cart-item .controls .plus {
  color: pink;
  margin: 0 5px;
}

