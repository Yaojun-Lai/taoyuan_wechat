.box {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  width: 48%; /* Adjust width for two boxes per row */
  background-color: #D9863D;
  border: 2px dashed #da9020;
  border-radius: 10px;
  padding: 10px;
  margin: 10px;
  /* margin-top: 10px; */
  text-align: center;
  
}

.box-text {
  /* font-weight: bold; */
